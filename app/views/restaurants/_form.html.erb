<%= form_for(@restaurant) do |f| %>
<div class="form-group">
<%= f.label :name %>
<%= f.text_field :name %>
<div class="form-group">
<%= f.label :address %>
<%= f.text_field :address %>
<div class="form-group">
<%= f.label :category %>
<%= f.text_field :category %>
<div class="form-group">
<%= f.label :phone_number %>
<%= f.text_field :phone_number %>

<%= f.submit class: 'btn btn-primary' %>
<% end %>
